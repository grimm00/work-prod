#!/usr/bin/env python3
"""
Project CLI Tool (proj)

Command-line interface for managing projects via the backend API.
"""

import sys
from pathlib import Path

# Add parent directory to path for imports
sys.path.insert(0, str(Path(__file__).parent))

import click
from commands.list_cmd import list_projects
from commands.get_cmd import get_project


@click.group()
@click.version_option(version='0.1.0')
def cli():
    """
    Project management CLI tool.
    
    Interact with your projects through the command line.
    """
    pass


# Register commands
cli.add_command(list_projects, name='list')
cli.add_command(get_project, name='get')


if __name__ == '__main__':
    cli()

